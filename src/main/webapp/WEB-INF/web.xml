<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

  <display-name>kickstarter</display-name>

  <listener>
    <listener-class>ua.goit.servlet.SystemPropertiesListener</listener-class>
  </listener>

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/applicationContext.xml</param-value>
  </context-param>

  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>FrontServlet</servlet-name>
    <servlet-class>ua.goit.servlet.FrontServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>FrontServlet</servlet-name>
    <url-pattern>/servlet/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>UserFilter</filter-name>
    <filter-class>ua.goit.filter.UserFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>UserFilter</filter-name>
    <url-pattern>/servlet/*</url-pattern>
  </filter-mapping>


</web-app>
